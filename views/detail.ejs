    <title>freedom's space</title>


    <style>
        .domain {
            background-color: cadetblue;
            padding-top: 20px;
            padding-left: 30px;
        }

        a {
            text-decoration-line: none;
        }

        .post_write {
            width: 500px;
            height: 500px;
            margin: 20px auto;
            padding: 50px;
            border: black solid;
            border-radius: 5px;

        }
    </style>
</head>

<body>

    <div class="domain" onclick="location.href='/';">
        <h1>Freedom Space</h1>
    </div>
    <div id="posting"></div>
    <div class="card border-success mb-3" style="max-width: 40rem; height: 15rem; margin: auto; margin-top: 30px;"">
        <div class=" card-header bg-transparent border-success" id="nameing">
        <%= memo.name %>
    </div>
    <div class="card-body text-success">
        <h5 class="card-title" id="titleing">
            <%= memo.title %>
        </h5>
        <p class="card-text" id="writeing">
            <%= memo.write %>
        </p>
    </div>
    <div class="card-footer bg-transparent border-success" id="timeing">
        <%= memo.time %>
    </div>
    <div data-id=" <%= memo._id %>"></div>
    </div>
    <a class="btn btn-secondary" style="margin:auto; margin-left: 47%;" onclick="check_password()">수정하기</a>
</body>
<script>
    const mydate = new Date(<%= memo.time %>)
    const changedDate = `${mydate.getUTCFullYear()} / ${mydate.getUTCMonth() + 1} / ${mydate.getDate()}`
    $('#timeing').text(changedDate)
    function check_password() {
        const password = prompt('비밀번호를 입력하여 주세요.')
        if (password == '<%= memo.password %>') {
            window.location.href = "/editpost/<%= memo._id %>"
        } else {
            alert("비밀번호가 잘못되었습니다.")
        }
    }

</script>

